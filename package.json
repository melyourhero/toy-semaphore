{
  "name": "toy-semaphore",
  "version": "0.0.1",
  "description": "A tiny implementation of semaphore that actually works, for learning",
  "main": "main.ts",
  "scripts": {
    "start": "npm run build:live",
    "build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./main.ts",
    "test": "nyc mocha test/**/*.spec.ts"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "melyourhero",
  "keywords": [
    "js",
    "async",
    "semaphore"
  ],
  "license": "ISC",
  "dependencies": {
    "log4js": "2.5.3",
    "nodemon": "1.14.12"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "@types/node": "9.4.0",
    "chai": "4.1.2",
    "mocha": "5.0.1",
    "nyc": "11.4.1",
    "ts-node": "4.1.0",
    "typescript": "2.7.1"
  }
}
